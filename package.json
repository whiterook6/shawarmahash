{
  "packageManager": "yarn@1.22.22",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "server/src/**/*.ts": [
      "cd server && eslint src --fix",
      "cd server && prettier --write src"
    ],
    "webui/src/**/*.ts": [
      "cd webui && eslint src --fix",
      "cd webui && prettier --write src"
    ]
  }
}
